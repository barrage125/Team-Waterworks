<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team64.waterworks.controllers.HomeActivity">

        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Waterworks !"/>

        <TextView
            android:id="@+id/login_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are logged in"
            android:layout_below="@id/welcome_message"/>

        <Button
            android:text="My Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_profile_btn"
            android:layout_below="@+id/login_status"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/create_report_btn"
            android:layout_toStartOf="@+id/create_report_btn" />

        <Button
            android:id="@+id/logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_below="@+id/view_profile_btn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/create_report_btn"
            android:layout_toLeftOf="@+id/create_report_btn" />

        <Button
            android:text="Create Report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_report_btn"
            android:layout_above="@+id/logout_btn"
            android:layout_toRightOf="@+id/login_status"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp" />

        <Button
            android:text="View Reports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_report_btn"
            android:layout_alignLeft="@+id/create_report_btn"
            android:layout_alignStart="@+id/create_report_btn"
            android:id="@+id/homeViewRepBTN"
            android:layout_alignRight="@+id/create_report_btn"
            android:layout_alignEnd="@+id/create_report_btn" />

        <Button
            android:id="@+id/view_map_btn"
            android:text="View Map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homeViewRepBTN" />

</RelativeLayout>
