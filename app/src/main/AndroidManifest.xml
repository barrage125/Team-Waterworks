<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="team64.waterworks">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.LoginActivity" />
        <activity android:name=".controllers.HomeActivity" />
        <activity android:name=".controllers.RegisterActivity" />
        <activity android:name=".controllers.ProfileActivity" />
        <activity android:name=".controllers.AddWSRActivity" />
        <activity android:name=".controllers.AddWPRActivity" />
        <activity android:name=".controllers.ListAllWSRActivity" />
        <activity android:name=".controllers.ListAllWPRActivity" />
        <activity android:name=".controllers.GraphActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".controllers.MapActivity"
            android:label="@string/title_activity_home_maps"></activity>
        <activity android:name=".controllers.SecurityLogActivity"></activity>
    </application>

</manifest>