<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="team64.waterworks">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.LoginActivity" />
        <activity android:name=".controllers.HomeActivity" />
        <activity android:name=".controllers.RegisterActivity" />
        <activity android:name=".controllers.ProfileActivity" />
        <activity android:name=".controllers.WaterReportActivity" />
        <activity android:name=".controllers.AllWaterReportsActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".controllers.HomeMapsActivity"
            android:label="@string/title_activity_home_maps">
        </activity>
    </application>

</manifest>